{
	"name": "extension-svelte",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build-scripts": "tsc background_script.ts content_script.ts --outDir dist",
		"build-extension": "pnpm build && pnpm build-scripts && cp manifest.json dist/",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "run-p lint:*",
		"lint:format": "prettier --plugin-search-dir . --check .",
		"lint:types": "tsc",
		"lint:js": "eslint ."
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.0.3",
		"@tsconfig/svelte": "^3.0.0",
		"@types/chrome": "^0.0.228",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"eslint": "^8.37.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"svelte": "^3.55.1",
		"svelte-check": "^2.10.3",
		"tailwindcss": "^3.3.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.3",
		"vite": "^4.2.0"
	}
}
